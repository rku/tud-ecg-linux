+++ b/05/src/material.cpp
@@ -4,7 +4,7 @@
 
 
 material::material():diffuse(0.8f,0.8f,0.8f),specular(0.4f,0.4f,0.4f),
-	reflection(0.0f),refraction(0.0f),shininess(80)
+	shininess(80),reflection(0.0f),refraction(0.0f)
 {
